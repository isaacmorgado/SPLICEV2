{
  "name": "splice",
  "version": "1.0.0",
  "description": "Adobe Premiere Pro UXP Plugin for automation with AI services",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && cp manifest.json dist/",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "uxp:watch": "uxp plugin watch --path ./dist --apps premierepro",
    "uxp:load": "uxp plugin load --manifest ./dist/manifest.json --apps premierepro",
    "uxp:reload": "uxp plugin reload --apps premierepro",
    "uxp:package": "uxp plugin package --manifest ./dist/manifest.json --apps premierepro --outputPath ./release",
    "prepare": "husky",
    "deploy": "bash scripts/deploy.sh",
    "deploy:skip-tests": "bash scripts/deploy.sh --skip-tests",
    "db:migrate": "bash scripts/db-migrate.sh",
    "db:migrate:dev": "bash scripts/db-migrate.sh development",
    "db:migrate:prod": "bash scripts/db-migrate.sh production"
  },
  "keywords": [
    "adobe",
    "uxp",
    "premiere-pro",
    "plugin",
    "automation",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@adobe/cc-ext-uxp-types": "^7.3.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vercel/node": "^4.0.0",
    "eslint": "^9.0.0",
    "happy-dom": "^15.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.0",
    "@spectrum-web-components/action-button": "^1.10.0",
    "@spectrum-web-components/button": "^1.10.0",
    "@spectrum-web-components/icons-workflow": "^1.10.0",
    "@spectrum-web-components/styles": "^1.10.0",
    "@spectrum-web-components/textfield": "^1.10.0",
    "@spectrum-web-components/theme": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "jose": "^5.9.0",
    "stripe": "^17.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": "20.x"
  }
}
