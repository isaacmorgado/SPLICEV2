# OpenAI API Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# AI Service Endpoint
# Default OpenAI endpoint - change if using a proxy or alternative service
AI_SERVICE_URL=https://api.openai.com/v1

# Debug Mode
# Set to true to enable verbose logging for development
DEBUG_MODE=false

# ===========================================
# Plugin Configuration (Vite)
# ===========================================

# Backend API URL (for plugin to communicate with Vercel backend)
# Development: http://localhost:3000/api
# Production: https://your-app.vercel.app/api
VITE_BACKEND_URL=http://localhost:3000/api

# ===========================================
# Backend API Environment Variables
# ===========================================

# Database (Neon Postgres)
# Get your connection string from https://console.neon.tech
DATABASE_URL=postgres://user:password@host.neon.tech/splice

# Stripe Configuration
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Monthly Price IDs
STRIPE_PRO_PRICE_ID=price_...
STRIPE_STUDIO_PRICE_ID=price_...
STRIPE_PRO_REFERRAL_PRICE_ID=price_...

# Yearly Price IDs (created by scripts/setup-stripe-yearly-prices.ts)
STRIPE_PRO_YEARLY_PRICE_ID=price_...
STRIPE_STUDIO_YEARLY_PRICE_ID=price_...
STRIPE_PRO_REFERRAL_YEARLY_PRICE_ID=price_...

# JWT Authentication
# Generate a secure random string (min 32 characters)
JWT_SECRET=your_secure_jwt_secret_here

# Groq API (Transcription - 67% cheaper than OpenAI)
# Get your API key from https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# ElevenLabs API (Voice Isolation - Legacy, being replaced by Modal/Demucs)
# Get your API key from https://elevenlabs.io
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Modal (Voice Isolation with Demucs - 97% cheaper than ElevenLabs)
# Get your tokens from https://modal.com/settings
MODAL_TOKEN_ID=your_modal_token_id
MODAL_TOKEN_SECRET=your_modal_token_secret
MODAL_VOICE_ISOLATION_URL=https://your-username--splice-voice-isolation-isolate-voice--xxxxx.modal.run

# Gemini API (Alternative LLM for take analysis)
# Get your API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here


# API Key Encryption Secret (for BYOK users)
# Used to encrypt user API keys stored in database
# If not set, will fall back to JWT_SECRET
API_KEY_ENCRYPTION_SECRET=your_encryption_secret_here

# Cron Job Authentication
# Secret token to authenticate cron job requests
# Generate a secure random string
CRON_SECRET=your_secure_cron_secret_here
