{
  "id": "com.splice.premierepro",
  "name": "Splice",
  "version": "1.0.0",
  "manifestVersion": 5,
  "main": "index.html",
  "host": [
    {
      "app": "premierepro",
      "minVersion": "25.6.0"
    }
  ],
  "entrypoints": [
    {
      "type": "panel",
      "id": "mainPanel",
      "label": {
        "default": "Splice"
      },
      "icons": [
        {
          "width": 48,
          "height": 48,
          "path": "icons/icon-dark.png",
          "scale": [1, 2],
          "theme": ["dark", "darkest"]
        },
        {
          "width": 48,
          "height": 48,
          "path": "icons/icon-light.png",
          "scale": [1, 2],
          "theme": ["light", "lightest"]
        }
      ],
      "minimumSize": {
        "width": 300,
        "height": 400
      },
      "preferredDockedSize": {
        "width": 320,
        "height": 500
      }
    }
  ],
  "icons": [
    {
      "width": 48,
      "height": 48,
      "path": "icons/icon-dark.png",
      "scale": [1, 2],
      "theme": ["dark", "darkest"],
      "species": ["pluginList"]
    },
    {
      "width": 48,
      "height": 48,
      "path": "icons/icon-light.png",
      "scale": [1, 2],
      "theme": ["light", "lightest"],
      "species": ["pluginList"]
    }
  ],
  "requiredPermissions": {
    "network": {
      "domains": ["https://*"]
    },
    "clipboard": "readAndWrite",
    "localFileSystem": "fullAccess",
    "webview": {
      "allow": "yes",
      "domains": ["https://*"]
    },
    "launchProcess": {
      "schemes": ["https", "http"],
      "extensions": []
    }
  },
  "experimentalApis": {
    "enableSWCSupport": true
  }
}
